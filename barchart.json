{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 10 Countries by Poverty Share (Dynamic Year Selection)",
  "width": 1000,
  "height": 400,
  "data": {
    "url": "./subset_poverty_data.csv",  
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "selectedYear",
      "value": 2022,  
      "bind": {
        "input": "range",
        "min": 1991,       
        "max": 2022,      
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Year == selectedYear"  
    },
    {
      "calculate": "toNumber(datum['Share below $6.85 a day'])",  
      "as": "PovertyRate"  
    },
    {
      "window": [{"op": "rank", "as": "rank"}],  
      "sort": [{"field": "PovertyRate", "order": "descending"}]  
    },
    {
      "filter": "datum.rank <= 10"  
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Country",
      "type": "nominal",
      "title": "Country",
      "sort": "-y"  
    },
    "y": {
      "field": "PovertyRate",  
      "type": "quantitative",
      "title": "Share of Population Below $6.85 a Day (%)"
    },
    "color": {
      "field": "Country",
      "type": "nominal",
      "scale": {
        "scheme": "tableau20"  
      },
      "title": "Country",
      "legend": null
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "Year", "type": "quantitative", "title": "Year"},
      {"field": "PovertyRate", "type": "quantitative", "title": "Poverty Rate (%)"}
    ]
  }
}
